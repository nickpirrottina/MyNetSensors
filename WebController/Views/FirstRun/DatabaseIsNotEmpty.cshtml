@{
    Layout = "_EmptyLayout";
    ViewBag.Title = "First Run";
}

<br />
<div class="ui container">

    <h2>@ViewBag.Title</h2>


    <div class="ui ordered steps">
        <div class="active step">
            <div class="content">
                <div class="title">Database</div>
                <div class="description">Configure database</div>
            </div>
        </div>
        <div class="step">
            <div class="content">
                <div class="title">Gateway</div>
                <div class="description">Connect to gateway</div>
            </div>
        </div>
        <div class="step">
            <div class="content">
                <div class="title">User</div>
                <div class="description">Create admin profile</div>
            </div>
        </div>
    </div>

    <div class="ui divider"></div>


    <div class="ui two column stackable centered grid">

        <div class="column">
            <div class="ui raised segments">
                <div class="ui secondary attached segment">
                    <h4>Database</h4>
                </div>

                <div class="ui attached segment">
                    <h2 class="ui header">Database is not empty</h2>
                    Database already stores the data. Do you want to delete the old data?
                    <br />
                    <br />
                </div>

                <div class="ui center aligned attached segment">

                        <a asp-action="DatabaseCheck" asp-route-id="Delete" class="ui red button">Yes. Delete all data</a>
                        <a asp-action="DatabaseCheck" asp-route-id="Use" class="ui primary button">No. Use old data</a>

                </div>


            </div>
        </div>

    </div>
</div>


