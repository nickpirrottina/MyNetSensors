@using System.Threading.Tasks
@using MyNodes.WebController.ViewModels.NodeEditor
@model List<MyNodes.WebController.ViewModels.NodeEditor.NodeDescription>

@{
    ViewBag.Title = "Nodes Description";
    string category="";
}

<br />
<div class="ui container">

    <h2>@ViewBag.Title</h2>

    <div>
       < <a asp-action="Index">Node Editor</a>
    </div>
    <div class="ui divider"></div>


    <div class="ui four column grid" id="nodesContainer">
    </div>


</div>
<br />

<div class="ui text container">
    @foreach (NodeDescription n in Model)
    {
        if (category != n.category)
        {
            category = n.category;
            <br/>
            <br/>
            <h1>@category</h1>
        }
        <h3>@n.type</h3>
        <p>
           @Html.Raw(n.description)
        </p>
    }

</div>


<br />
